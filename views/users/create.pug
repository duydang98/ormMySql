extends ../layouts/common
block content
        if errors
                each error in errors
                    .alert.alert-danger= error
        
        h1 Create User
        .d-flex.align-items-center
            form(action="/api/user", method="post",enctype="multipart/form-data")
                .form-group
                    label(for="name") Name
                    input#name.form-control(name="name",type="text", value=value ? value.name : "")
                .form-group
                    label(for="phone") Phone
                    input#phone.form-control(name="phone",type="text", value=value ? value.phone : "")
                .form-group
                    label(for="email") Email
                    input#email.form-control(name="email",type="text", value=value ? value.email : "")
                    .form-group
                    label(for="password") Password
                    input#password.form-control(name="password",type="password", value=value ? value.password : "")
                .form-group
                    label(for="Avatar") Avatar
                    input#Avatar.form-control(name="avatar",type="file")
                button(class="btn btn-primary")  Create
